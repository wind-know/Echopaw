<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EchoPaw" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.EchoPaw" parent="Base.Theme.EchoPaw" />
    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/transparent</item>
    </style>
    <style name="BnvStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:padding">18dp</item>
    </style>
    <style name="TabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/home_gray</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TabLayoutTextAppearanceSelected" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>  <!-- 选中项加粗 -->
    </style>
    <style name="CircleWithWhiteBorder">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">50%</item>  <!-- 圆形 -->
    <item name="strokeColor">@color/white</item>  <!-- 边框颜色 -->
    <item name="strokeWidth">10dp</item>  <!-- 边框宽度 -->
</style>

    <!-- 保留主题结构，修改背景为你需要的颜色/图片 -->
    <style name="TransparentActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 关键：将背景设置为你需要的颜色（示例为深蓝色）或图片 -->
        <item name="android:windowBackground">@drawable/bg3</item>
        <!-- 若需要图片背景，替换为：@drawable/your_background_image -->
        <!-- 保留其他透明相关配置（确保地球背景仍能透明显示） -->
        <item name="android:windowIsTranslucent">true</item> <!-- 保持半透明特性 -->
        <item name="android:windowContentOverlay">@null</item> <!-- 去除内容覆盖层 -->
        <item name="android:windowNoTitle">true</item> <!-- 无标题栏 -->
    </style>
</resources>